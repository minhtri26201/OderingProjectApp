<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Method of Payment" />

    <Spinner
        android:id="@+id/planets_spinner"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        tools:ignore="OnClick"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:background="#f498ad"
        android:layout_height="20dp"> </TextView>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Would you like to write a message? if yes, please enter the message below"

        > </TextView>
    <EditText
        android:id="@+id/message"
        android:hint="Your answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        > </EditText>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:background="#f498ad"
        android:layout_height="20dp"> </TextView>
    <TextView
        android:layout_marginTop="20dp"
        android:text="Do you have any additional information or instruction?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        > </TextView>
    <EditText
        android:id="@+id/information"
        android:hint="Your answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        > </EditText>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:background="#f498ad"
        android:layout_height="20dp"> </TextView>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Type"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        <RadioButton
            android:id="@+id/Wedding"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:checked="false"
            android:text="Wedding"
            android:onClick="changeEventType"
            android:tag="wedding"
            tools:ignore="OnClick">

        </RadioButton>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/birthday"
            android:text="birthday"
            android:checked="false"
            android:onClick="changeEventType"
            android:tag="birthday"
            tools:ignore="OnClick">

        </RadioButton>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aniversary"
            android:text="Aniversary"
            android:checked="false"
            android:onClick="changeEventType"
            android:tag="aniversary"
            tools:ignore="OnClick">

        </RadioButton>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/graduation"
            android:text="Graduation"
            android:checked="false"
            android:onClick="changeEventType"
            android:tag="graduation"
            tools:ignore="OnClick">

        </RadioButton>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/no_event"
            android:text="No event"
            android:checked="false"
            android:onClick="changeEventType"
            android:tag="no_event"
            tools:ignore="OnClick">

        </RadioButton>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/other"
            android:text="other"
            android:checked="false"
            android:onClick="changeEventType"
            android:tag="other"
            tools:ignore="OnClick">

        </RadioButton>


    </RadioGroup>

    <Button
        android:id="@+id/button_odernow"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:background="#82E80C"
        android:text="Oder Now"
        android:onClick="toDone"
        tools:ignore="OnClick"></Button>
</LinearLayout>